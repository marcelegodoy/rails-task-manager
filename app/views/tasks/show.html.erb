<h1><%= @task.title %></h1>
  <% if @task.completed == true %>
    <h3>🔳 Done - <%= @task.title %></h3>
  <% else %>
    <h3>⬜️ To do - <%= @task.title %></h3>
  <% end %>

<p><%= link_to 'Edit this task', tasks_edit_path(@task) %></p>
<p><%= link_to 'Remove this task', task_path, method: :delete %></p>
<p><%= link_to '↩️ Back to list', tasks_path %></p>
